@model BuffteksWebsite.Models.EditProjectDetailViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Project Particpants - Add Participants to Project: @Model.TheProject.ProjectName</h4>
<hr />
<div class="row">
    <div class="col-md-4">  
        <form asp-controller="Projects" asp-action="EditProjectParticipants" method="post">
            <div class="form-group">
                <input type+"hidden" asp-for="ProjectID"/>
                <label asp-for="SelectedID" class="control-label">Select from Clients</label>
                <select asp-for="SelectedID" asp-items="Model.ProjectClientsList"></select> 
            </div>
            <div class="form-group">
                <input type="submit" value="Select New Client for Project" class="btn btn-success" />
            </div>
        </form>
        <form asp-controller="Projects" asp-action="EditProjectParticipants" method="post">
            <div class="form-group">
                <input type+"hidden" asp-for="ProjectID"/>
                <label asp-for="SelectedID" class="control-label">Select from Members</label>
                <select asp-for="SelectedID" asp-items="Model.ProjectMembersList"></select>               
            </div>
            <div class="form-group">
                <input type="submit" value="Select New Member for Project" class="btn btn-success" />
            </div>
        </form>        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
